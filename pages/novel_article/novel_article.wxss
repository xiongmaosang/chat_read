page{
  background: #f5f5f5;
}
/* 阅读按钮 */
.btn_readit{
  padding: 30rpx 0;
  text-align: center;
  background: #ff4b4b;
  color: #fff;
  font-size: 36rpx;
  line-height: 1;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

/* 单本原创图书信息 */
.sec_book{
  border-bottom: 18rpx solid #f5f5f5;
}
.sec_book_box{
  padding:30rpx 38rpx;
}
.sec_book_item{
  display: flex;
  flex-direction: row;
  margin-bottom: 30rpx;
}
.item_book_summ_tit{
  height: 68rpx;
  overflow: hidden;
}
.item_bookremark{
  color: #ff4b4b;
  margin:10rpx 0 30rpx;
}
/* 单本图书作者 */
.item_book_summ_author{
  color: #888;
}
.item_book_summ_intro{
  font-size: 28rpx;
  line-height: 50rpx;
  color: #020202;
  text-indent: 52rpx;
  word-break: break-all;
}
/* 书籍目录按钮 */
.sec_book_catabar{
  display: flex;
  flex-direction: row;
  border-top: 1px solid #f3f3f3;
  padding: 30rpx 38rpx;
  font-size: 28rpx;
  line-height: 1;
}
.btn_book_catabar{
  width: 150rpx;
  padding: 30rpx 38rpx;
  margin: -30rpx -38rpx;
  color: #ff2222; 
}
.btn_book_catabar .icon_catabar{
  width: 32rpx;
  height: 28rpx;
  margin-right: 26rpx;
  display: inline-block;
  vertical-align: top;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
}
.txt_book_update{
  width: 100%;
  text-align: right;
  color: #888;
}

/* 单本视频 */

video {
  width: 100%;
  margin-bottom: 20rpx;
}
.item_video_summ_tit{
  font-size: 34rpx;
  line-height: 48rpx;
  margin-bottom: 30rpx;
}
.item_video_sum_author{
  color: #888888;
  font-size: 20rpx;
  margin-bottom: 30rpx;
}
.item_video_summ_intro {
  font-family: 'Microsoft YaHei';
  font-size: 28rpx;
  line-height: 50rpx;
  color: #020202!important;
  text-indent: 52rpx;
  word-break: break-all;
  text-align: justify;
}
/* 替换富文本样式 */
.item_video_summ_intro view {
  font-family:inherit!important;
  font-size: inherit!important;
  line-height:inherit!important;
  color: inherit!important;
}
.item_video_time{
  text-align: right;
  color: #888888;
  font-size: 20rpx;
  margin-top: 10rpx;
}
/* 单本书圈 */
.item_circle_time{
  float: right;
}
.item_circle_count{
  font-size: 20rpx;
  color:#888888;
  line-height: 1;
  margin-top:20rpx;
}
.item_no_summ{
  text-align: center;
  padding-bottom: 30rpx;
  font-size: 30rpx;
}
/* 视频简介图片设定 */
.wxParse-img{
  display:block;
  width: 100%!important;
  margin: 23rpx 0;
}
/* 书圈相对路径图片隐藏 */
.item_circle_text .wxParse-img{
  display: none;
}